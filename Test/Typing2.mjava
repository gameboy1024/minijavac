class Account {
      Int value = 0;

      Boolean deposit(Int v) {
           if (v > 0) {
              value = value + v;
              true
           };
           false
      }

      Boolean withdraw(Int v) {
           if (v > 0) {
              value = value - v;
              true
           };
           false
      }

      Int getValue() {
          value
      }
}

